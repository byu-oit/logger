{
  "name": "@byu-oit/logger",
  "version": "0.4.2",
  "description": "Default configuration for pino logger",
  "contributors": [
    {
      "name": "Scott Hutching",
      "email": "scott_hutchings@byu.edu"
    },
    {
      "name": "Spencer Tuft",
      "email": "stuft2@byu.edu"
    }
  ],
  "type": "module",
  "types": "dist/types/logger.d.ts",
  "main": "dist/esm/logger.js",
  "module": "dist/cjs/logger.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/types/logger.d.ts",
        "default": "./dist/esm/logger.js"
      },
      "require": {
        "types": "./dist/cjs/types/logger.d.ts",
        "default": "./dist/cjs/logger.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npx rimraf dist && npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json && echo-cli \"{\\\"type\\\": \\\"commonjs\\\"}\" > dist/cjs/package.json",
    "build:esm": "tsc -p tsconfig.json",
    "coverage": "npm run test -- --coverage || exit 0",
    "lint": "npx ts-standard . | snazzy",
    "lint:fix": "npx ts-standard --fix . | snazzy",
    "test": "jest",
    "prepublishOnly": "npm run build"
  },
  "author": "Brigham Young University - Office of Information Technology",
  "license": "Apache-2.0",
  "dependencies": {
    "deepmerge": "^4.2.2",
    "pino": "^8.11.0",
    "pino-http": "^6.6.0"
  },
  "devDependencies": {
    "@fastify/pre-commit": "^2.1.0",
    "@tsconfig/node18": "^18.2.2",
    "@types/jest": "^29.5.0",
    "@types/node": "^16.9.1",
    "echo-cli": "^2.0.0",
    "jest": "^29.5.0",
    "pino-pretty": "^10.0.0",
    "snazzy": "^9.0.0",
    "ts-jest": "^29.1.0",
    "ts-standard": "^12.0.2",
    "tsx": "^4.7.0",
    "typescript": "^5.0.3"
  },
  "optionalDependencies": {
    "pino-pretty": ">=7"
  },
  "engines": {
    "node": ">=16"
  },
  "pre-commit": [
    "test",
    "lint"
  ],
  "jest": {
    "moduleNameMapper": {
      "^(\\.\\.?\\/.+)\\.js$": "$1"
    },
    "extensionsToTreatAsEsm": [".ts"],
    "transform": {
      "^.+\\.(js|ts)$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  },
  "ts-standard": {
    "ignore": [
      "dist"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/byu-oit/logger.git"
  },
  "bugs": {
    "url": "https://github.com/byu-oit/logger/issues"
  }
}
